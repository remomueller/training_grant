<div id="help_email_modal" class="modal" style="display:none">
  <div class="modal-header">
    Help Request Email
    <a class="close" data-dismiss="modal">Ã—</a>
  </div>
  <div class="modal-body">
    <%= form_tag help_email_applicant_path(applicant), method: :post, remote: true, id: 'help_email_form' do %>
      <div class="form-group">
        <%= label_tag :subject, nil, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= text_field_tag :subject, "Help Request [#{subject}]", style: 'width:95%' %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :body, nil, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= text_area_tag :body, '', rows: 20, style: 'width:95%', placeholder: 'Please explain what you are attempting to do here.' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="modal-footer">
    <%= link_to 'Close', '#', class: 'btn', data: { dismiss: 'modal' } %>
    <%= link_to 'Send Email', '#', class: 'btn btn-primary', data: { object: 'submit', target: '#help_email_form' } %>
  </div>
</div>
