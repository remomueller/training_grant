<% @title = 'Edit My Information' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for current_preceptor, url: update_me_preceptors_path, method: :put, html: { class: 'form-horizontal' } do |f| %>
  <% if current_preceptor.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(current_preceptor.errors.count, "error") %> prohibited this preceptor from being saved</h4>

      <ul>
      <% current_preceptor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render partial: 'preceptors/form/general', locals: { f: f } %>

  <div class="form-actions">
    <%= f.submit "Update My Information", class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
