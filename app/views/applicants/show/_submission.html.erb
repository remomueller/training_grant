<div class="page-header">
  <h2>
    Submission Status
    <%= link_to 'edit', '#', data: { object: 'modal-show', target: '#edit_submission_date' }, class: 'btn btn-xs' %>
  </h2>
</div>

<dl class="dl-horizontal">
  <dt>Applicant assurance</dt>
  <dd style="min-height:60px"><%= simple_check applicant.assurance %></dd>

<% if applicant.originally_submitted_at == applicant.submitted_at %>
  <dt>Submitted</dt>
  <dd class="submission_date_container"><%= simple_time applicant.submitted_at %></dd>
<% else %>
  <dt>Originally Submitted</dt>
  <dd class="submission_date_container" style="min-height:60px"><%= simple_time applicant.originally_submitted_at %></dd>

  <dt>Resubmitted</dt>
  <dd class="submission_date_container"><%= simple_time applicant.submitted_at %></dd>
<% end %>
</dl>

<div id="edit_submission_date" class="modal hide">
  <div class="modal-header">
    Update Submission Date
    <a class="close" data-dismiss="modal">Ã—</a>
  </div>
  <div class="modal-body">
    <%= form_tag update_submitted_at_date_applicant_path(applicant), method: :post, remote: true, class: 'form-horizontal', id: 'update_submission_date_form' do %>
      <div class="form-group">
        <%= label_tag :submission_date, nil, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <div class="input-append">
            <%= text_field_tag :submission_date, applicant.originally_submitted_at ? applicant.originally_submitted_at.strftime('%m/%d/%Y') : '', class: 'datepicker' %>
            <span class="add-on" style="margin-top:1px"><i class="icon-calendar"></i></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="modal-footer">
    <%= link_to 'Close', '#', class: 'btn', data: { target: '#edit_submission_date', object: 'modal-hide' } %>
    <%= link_to 'Update Submission Date', '#', class: 'btn btn-primary', data: { object: 'submit', target: '#update_submission_date_form' } %>
  </div>
</div>
