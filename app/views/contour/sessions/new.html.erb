<% @title = 'Login' %>

<div class="row">
  <div class="span4">
    <div class="page-header">
      <h2>Applicant Login</h2>
    </div>

    <% form_name = "new_applicant" %>
    <%= form_for(:applicant, as: 'applicants', url: session_path('applicant'), html: { id: form_name, class: 'form-horizontal' }) do |f| %>
      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :remember_me, class: 'control-label' %>
        <div class="controls">
          <%= f.check_box :remember_me %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Applicant Login", class: 'btn btn-primary' %>
      </div>

      <%= link_to "Forgot your password?", new_password_path('applicant') %> or <%= link_to "Register here!", new_registration_path('applicant') %>

    <% end %>
  </div>

  <div class="span4">
    <div class="page-header">
      <h2>Preceptor Login</h2>
    </div>
    <% form_name = "new_preceptor" %>
    <%= form_for(:preceptor, as: 'preceptor', url: session_path('preceptor'), html: { id: form_name, class: 'form-horizontal' }) do |f| %>
      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :remember_me, class: 'control-label' %>
        <div class="controls">
          <%= f.check_box :remember_me %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Preceptor Login", class: 'btn btn-primary' %>
      </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    <% end %>
  </div>
  <div class="span4">
    <div class="page-header">
      <h2>Administrator Login</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :remember_me, class: 'control-label' %>
        <div class="controls">
          <%= f.check_box :remember_me %>
        </div>
      </div>

      <div class="form-actions">
        <% form_name = "new_#{resource.class.name.underscore}" %>
        <%= f.submit "Administrator Login", class: 'btn btn-primary' %>
      </div>

      <%= link_to "Forgot your password?", new_password_path(resource_name) %> or <%= link_to "Register here!", new_registration_path(resource_name) %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <%= render partial: 'contour/layouts/latest_news' %>
  </div>
</div>
