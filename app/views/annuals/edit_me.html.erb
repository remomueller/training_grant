<% @title = "My #{@annual.year} Annual Information" %>

<div class="page-header">
  <h1>
    <%= @title %>
    <div class="pull-right"><%= link_to "Help", '#', class: 'btn btn-info', data: { object: 'modal-show', target: '#help_email_modal' } %></div>
  </h1>
  <p class="lead">
    Please complete the fields below with your most recent information (September <%= @annual.year - 1 %> through September <%= @annual.year %>).  If you have no new information to add, please write "N/A" in the field, as it will not allow you to submit without completing all fields.
    If you do not have an NIH Other Support, please attach a document that details your current funding situation.
  </p>
</div>

<%= form_for @annual, url: update_me_annual_path(@annual), method: :put, html: { class: 'form-horizontal' } do |f| %>

  <% @applicant = current_applicant %>

  <% if @applicant.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@applicant.errors.count, "error") %> prohibited this applicant from being saved</h4>

      <ul>
      <% @applicant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @annual.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@annual.errors.count, "error") %> prohibited this form from being saved</h4>

      <ul>
      <% @annual.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render partial: 'annuals/form/contact' %>

  <%= render partial: 'annuals/form/education' %>

  <div class="page-header">
    <h2>Annual Information</h2>
  </div>
  <%= render partial: 'inner_form', locals: { f: f } %>

  <div class="form-actions">
    <%= hidden_field :applicant, :publish_annual, value: '1' %>
    <%= f.hidden_field :publish, value: '1' %>
    <%= f.submit 'Submit Annual Information', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', dashboard_applicants_path, class: 'btn btn-default' %>
  </div>
<% end %>

<%= render partial: 'applicants/help_modal', locals: { applicant: current_applicant, subject: 'Updating Annual Information' } %>
