<% @title = 'Preceptors' %>
<h1><%= @title %></h1>

<%= link_to image_tag('gentleface/16/doc_new.png', alt: '') + "Create New Preceptor", new_preceptor_path, class: 'button positive' %>

<%= form_tag preceptors_path, method: :get, remote: true, id: "preceptors_search", style: "margin-bottom:-5px" do %>
  <%= hidden_field_tag :order %>
  Search <%= text_field_tag 'search', params[:search] %>
<% end %>

<div id="preceptors"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#preceptors_search").attr("action"), $("#preceptors_search").serialize(), null, "script");
  });
<% end %>
