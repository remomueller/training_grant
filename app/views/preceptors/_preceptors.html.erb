<%= render partial: 'layouts/per_page', locals: { type: 'preceptors', per_page: 40, object_count: @preceptor_count } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Degree</th>
      <th>Status</th>
      <th>Hospital affiliation</th>
      <th>Hospital appointment</th>
      <th>Other support</th>
      <th>Rank</th>
      <th>Research interest</th>
      <th>Program role</th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'preceptors.current_sign_in_at', 'Recent Activity', 'preceptors_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @preceptors.each do |preceptor| %>
    <tr>
      <td><%= link_to preceptor.name, preceptor %></td>
      <td><%= preceptor.email %></td>
      <td><%= preceptor.degree %></td>
      <td><%= preceptor.status %></td>
      <td><%= preceptor.hospital_affiliation %></td>
      <td><%= preceptor.hospital_appointment %></td>
      <td><%= preceptor.other_support %></td>
      <td><%= preceptor.rank %></td>
      <td><%= preceptor.research_interest %></td>
      <td><%= preceptor.program_role %></td>
      <td><%= recent_activity(preceptor.current_sign_in_at) %></td>
      <td>
        <%= link_to 'Edit', edit_preceptor_path(preceptor), class: 'btn btn-mini' %>
        <%= link_to 'Delete', preceptor, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Preceptor #{preceptor.name}?" } %>
      </td>
    </tr>
  <% end %>
</table>

<center><%= paginate @preceptors %></center>
