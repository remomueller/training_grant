#help_email_modal.modal{ tabindex: "-1", role: "dialog", aria: { hidden: "true" } }
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h4.modal-title Help Request Email
        %button.close{ type: "button", data: { dismiss: "modal" }, aria: { hidden: true } }= icon("fas", "times")
      .modal-body
        = form_with url: help_email_applicant_path(applicant), method: :post, id: "help_email_form" do |form|

          .form-group.row
            = label_tag :subject, nil, class: "col-md-2 col-form-label"
            .col-md-10
              = text_field_tag :subject, "Help Request [#{subject}]", class: "form-control"

          .form-group.row
            = label_tag :body, nil, class: "col-md-2 col-form-label"
            .col-md-10
              = text_area_tag :body, "", rows: 20, class: "form-control", placeholder: "Please explain what you are attempting to do here."

      .modal-footer
        = link_to "Close", "#", class: "btn btn-light", data: { dismiss: "modal" }
        = link_to "Send Email", "#", class: "btn btn-primary", data: { object: "submit", target: "#help_email_form" }
