<%= render partial: 'contour/layouts/per_page', locals: { per_page: 40, object_count: @seminars.total_count } %>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'seminars.presenter', 'Presenter') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'seminars.presentation_title', 'Presentation Title') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'seminars.presentation_date', 'Presentation Date') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'seminars.category', 'Category') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @seminars.each do |seminar| %>
    <tr>
      <td><%= link_to seminar.presenter, seminar %></td>
      <td><%= seminar.presentation_title %></td>
      <td><%= seminar.presentation_date_with_time %></td>
      <td><%= seminar.category %></td>
      <td>
        <%= link_to 'Edit', edit_seminar_path(seminar), class: 'btn btn-xs btn-default' %>
        <%= link_to 'Delete', seminar, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Seminar #{seminar.name}?" } %>
      </td>
    </tr>
  <% end %>
</table>

<center><%= paginate @seminars, theme: 'contour' %></center>
