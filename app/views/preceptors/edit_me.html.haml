- @title = 'Edit My Information'
.page-header
  %h1= @title

= form_for current_preceptor, url: update_me_preceptors_path, method: :put, html: { class: 'form-horizontal' } do |f|
  - if current_preceptor.errors.any?
    .callout.callout-danger
      %h4
        = pluralize(current_preceptor.errors.count, "error")
        prohibited this preceptor from being saved

      %ul
        - current_preceptor.errors.full_messages.each do |msg|
          %li= msg

  = render 'preceptors/form/general', f: f

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit 'Update My Information', class: 'btn btn-primary'
      = link_to 'Cancel', dashboard_preceptors_path, class: 'btn btn-default'
