<div class="page-header">
  <h1><%= link_to "Preceptors", preceptors_path %> &middot; <%= @title %></h1>
</div>

<%= form_for(@preceptor, html: { class: 'form-horizontal' }) do |f| %>
  <% if @preceptor.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@preceptor.errors.count, "error") %> prohibited this preceptor from being saved</h4>

      <ul>
      <% @preceptor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render partial: 'preceptors/form/general', locals: { f: f } %>

  <div class="form-actions">
    <%= f.submit (@preceptor.new_record? ? "Create Preceptor" : "Update Preceptor"), class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
