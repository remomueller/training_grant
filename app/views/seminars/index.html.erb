<% @title = 'Seminars' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Seminar", new_seminar_path, class: 'btn btn-xs btn-primary' %>
    <%= link_to "Attendance Tracking", attendance_seminars_path(status: 'current'), class: 'btn btn-xs btn-default' %>
  </h1>
</div>

<%= form_tag seminars_path, method: :get, class: 'form-inline' do %>
  <%= hidden_field_tag :order, params[:order] %>

  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary', name: nil %>
<% end %>

<%= render partial: 'seminars/seminars' %>
