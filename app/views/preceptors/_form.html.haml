.page-header
  %h1
    = link_to "Preceptors", preceptors_path
    &middot;
    = @title

= form_for(@preceptor, html: { class: 'form-horizontal' }) do |f|
  - if @preceptor.errors.any?
    .callout.callout-danger
      %h4
        = pluralize @preceptor.errors.count, 'error'
        prohibited this preceptor from being saved

      %ul
        - @preceptor.errors.full_messages.each do |message|
          %li= message

  = render 'preceptors/form/general', f: f

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit (@preceptor.new_record? ? 'Create Preceptor' : 'Update Preceptor'), class: 'btn btn-primary'
      = cancel
