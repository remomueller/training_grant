.form-group
  = f.label :first_name, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_field :first_name, class: 'form-control'

.form-group
  = f.label :last_name, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_field :last_name, class: 'form-control'

.form-group
  = f.label :email, class: 'col-md-2 control-label'
  .col-md-10
    = f.email_field :email, class: 'form-control'

- if user_signed_in? and current_user.administrator?
  .form-group
    = f.label :status, class: 'col-md-2 control-label'
    .col-md-10
      = f.select :status, Preceptor::STATUS, {}, class: 'form-control'

.form-group
  = f.label :degree, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_field :degree, class: 'form-control'
    .bs-callout.bs-callout-info
      %h4 Example
      %code
        M.D.
      %code
        Ph.D.

.form-group
  = f.label :hospital_affiliation, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_field :hospital_affiliation, autocomplete: 'off', data: { object: 'typeahead', local: Hospital.current.order('name').pluck(:name).uniq.to_json }, class: 'form-control'
    - if user_signed_in? and current_user.administrator?
      .bs-callout.bs-callout-info
        %h4 Manage Hospital List
        You can edit the
        = succeed '.' do
          = link_to 'list of hospitals', hospitals_path, class: 'btn btn-xs btn-default'

.form-group
  = f.label :hospital_appointment, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_field :hospital_appointment, class: 'form-control'

.form-group
  = f.label :biosketch, 'NIH Biosketch (PDF, Word)', class: 'col-md-2 control-label'
  .col-md-10
    = f.file_field :biosketch, class: 'form-control'
    = f.hidden_field :biosketch_cache

.form-group
  = f.label :curriculum_vitae, 'Curriculum Vitae (PDF, Word)', class: 'col-md-2 control-label'
  .col-md-10
    = f.file_field :curriculum_vitae, class: 'form-control'
    = f.hidden_field :curriculum_vitae_cache

.form-group
  = f.label :other_support, 'Other support (PDF, Word)', class: 'col-md-2 control-label'
  .col-md-10
    = f.file_field :other_support, class: 'form-control'
    = f.hidden_field :other_support_cache
    .bs-callout.bs-callout-info
      %h4 Example Document
      You can download an example
      = link_to 'Other-Support.doc', "#{root_path}Other-Support.doc", class: 'btn btn-xs btn-default', target: '_blank'
      as a template.

- if user_signed_in? and current_user.administrator?
  .form-group
    = f.label :rank, class: 'col-md-2 control-label'
    .col-md-10
      = f.select :rank, options_for_select([['---', nil]] + Preceptor::RANK), {}, class: 'form-control'

.form-group
  = f.label :research_interest, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_area :research_interest, rows: 7, class: 'form-control'

.form-group
  = f.label :program_role, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_field :program_role, class: 'form-control'

.form-group
  = f.label :publications, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_area :publications, rows: 14, class: 'form-control'

.form-group
  = f.label :grants, class: 'col-md-2 control-label'
  .col-md-10
    = f.text_area :grants, rows: 14, class: 'form-control'
