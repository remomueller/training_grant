<div id="send_email_modal" class="modal" style="display:none">
  <div class="modal-header">
    Annual Update Reminder Email
    <a class="close" data-dismiss="modal">Ã—</a>
  </div>
  <div class="modal-body">
    <form>
      <div class="control-group">
        <%= label_tag :year, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :year, Date.today.year %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :subject, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :subject, ANNUAL_EMAIL_SUBJECT, style: 'width:95%' %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :body, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_area_tag :body, ANNUAL_EMAIL_BODY, rows: 20, style: 'width:95%' %>
        </div>
      </div>
    </form>
  </div>

  <div class="modal-footer">
    <%= link_to 'Close', '#', class: 'btn', data: { target: '#send_email_modal', object: 'modal-hide' } %>
    <%= link_to 'Send Email', '#', class: 'btn btn-primary', id: 'send_annual_email' %>
  </div>
</div>
