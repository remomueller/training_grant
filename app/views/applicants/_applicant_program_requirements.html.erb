<%= render partial: 'layouts/per_page', locals: { type: 'applicants', per_page: 40, object_count: @applicants.total_count } %>

<table class="table table-striped table-bordered" id="thetable" cellspacing="0" cellspacing="0" cellpadding="0" border="0">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.last_name', 'Name', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.training_period_start_date', 'Training Period Start Date', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.research_in_progress_date', 'Research-In-Progress Date', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.research_ethics_training_completed_date', 'Research Ethics Training Completed', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.grant_writing_training_completed_date', 'Grant Writing Training Completed', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.basic_research_statistics_course_completed_date', 'Basic Research Statistics Course Completed', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.advanced_research_statistics_course_completed_date', 'Advanced Research Statistics Course Completed', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.neuroscience_course_completed_date', 'Neuroscience Course', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.hsoph_summer_session_course_completed_date', 'Harvard School of Public Health Summer Session Courses', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.individual_funding_submission_date', 'Submitted application for Individual Funding', 'applicants_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'applicants.last_idp_date', 'Last IDP', 'applicants_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each_with_index do |applicant, index| %>
      <tr class="<%= 'first' if index == 0 %>">
        <td><%= link_to applicant.name, applicant %></td>

        <td><%= applicant.training_period_start_date %></td>
        <td><%= applicant.research_in_progress_date %></td>
        <td><%= applicant.research_ethics_training_completed_date %></td>
        <td><%= applicant.grant_writing_training_completed_date %></td>
        <td><%= applicant.basic_research_statistics_course_completed_date %></td>
        <td><%= applicant.advanced_research_statistics_course_completed_date %></td>
        <td><%= applicant.neuroscience_course_completed_date %></td>
        <td><%= applicant.hsoph_summer_session_course_completed_date %></td>
        <td><%= applicant.individual_funding_submission_date %></td>
        <td><%= applicant.last_idp_date %></td>
        <td>
          <%= link_to 'Edit', edit_applicant_path(applicant), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Delete', applicant, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Applicant #{applicant.name}?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<center><%= paginate @applicants, theme: "contour" %></center>
