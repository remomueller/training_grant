<% @title = 'Applicants' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Applicant", new_applicant_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag applicants_path, method: :get, remote: true, id: "applicants_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="applicants"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#applicants_search").attr("action"), $("#applicants_search").serialize(), null, "script");
  });
<% end %>
