.page-header
  %h2 Annual Information

- applicant.annuals.in_groups_of(2).each do |row_annuals|
  .row
    - row_annuals.each do |annual|
      - if annual
        .col-md-6
          .page-header
            %h3
              Year
              = annual.year
              = link_to 'Edit', current_user ? edit_annual_path(annual) : edit_me_annual_path(annual), class: "btn btn-xs #{annual.submitted? ? 'btn-default' : 'btn-primary'}"

            - if current_user && current_user.administrator?
              .callout.callout-info
                %h4
                  Annual
                  = annual.year
                  Login
                %code.text-primary{ style: 'font-size:0.7em' }= "#{ENV['website_url']}/annuals/#{annual.id}/edit_me?auth_token=#{annual.applicant.id_and_auth_token}"

          %dl.dl-horizontal

            %dt Coursework Completed
            %dd{ style: 'min-height: 60px;' }= simple_format annual.coursework_completed

            %dt Publications
            %dd= simple_format annual.publications

            %dt Conferences, Presentations, Honors, and Fellowships
            %dd{ style: 'min-height: 90px;' }= simple_format annual.presentations

            %dt Research Description
            %dd{ style: 'min-height: 60px;' }= simple_format annual.research_description

            %dt Degree or Certifications earned (Year) or Other Relevant Outcome
            %dd{ style: 'min-height: 60px;' }= simple_format annual.degree_or_certifications_earned

            %dt Source of Support
            %dd{ style: 'min-height: 60px;' }= annual.source_of_support

            %dt NIH Other Support
            %dd
              - if annual.nih_other_support_url.present?
                - full_url = "#{request.script_name}#{annual.nih_other_support.url}"
                = link_to annual.nih_other_support_url.split('/').last, full_url, target: '_blank', class: 'btn btn-xs btn-default'
                = number_to_human_size annual.nih_other_support.size
