- if applicant.approved_irb_document_url.present?
  - full_url = "#{request.script_name}#{applicant.approved_irb_document.url}"
  = link_to applicant.approved_irb_document_url.split("/").last, full_url, target: "_blank"
  %span.badge.badge-light= number_to_human_size(applicant.approved_irb_document.size)
