- @title = @hospital.name
.page-header
  %h1
    = link_to 'Hospitals', hospitals_path
    &middot;
    = @title
  = link_to 'Edit Hospital', edit_hospital_path(@hospital), class: 'btn btn-xs btn-default'
  = link_to 'Delete Hospital', @hospital, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Hospital #{@hospital.name}?" }

%dl.dl-horizontal
  %dt Name
  %dd= @hospital.name
