# MySQL. Versions 5.5.8 and up are supported.
#
# Install the MySQL driver
#   gem install mysql2
#
# Ensure the MySQL gem is defined in your Gemfile
#   gem "mysql2"
#
# And be sure to use new-style password hashing:
#   https://dev.mysql.com/doc/refman/5.7/en/password-hashing.html
#
development:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: train_tracks_development
  pool: 5
  username: <%= print "Enter Database Username: "; u = gets.chomp(); u %>
  <%= print "Enter Database Password: "; p = gets.chomp(); if p == '' then p = '# password:' else p = "password: #{p}" end; p %>
  <%= print "Enter Database Socket: "; s = gets.chomp(); if s == '' then s = '# socket:' else s = "socket: #{s}" end; s %>
  <%= print "Enter Database Host: "; h = gets.chomp(); if h == '' then h = '# host:' else h = "host: #{h}" end; h %>

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: train_tracks_test
  pool: 5
  username: <%= u %>
  <%= p %>
  <%= s %>
  <%= h %>

production:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: train_tracks_production
  pool: 5
  username: <%= u %>
  <%= p %>
  <%= s %>
  <%= h %>
