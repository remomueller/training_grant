<% @title = 'Login' %>

<div class="row">
  <div class="col-md-6">
    <div class="page-header">
      <h1>Applicant Login</h1>
    </div>

    <%= form_for(:applicant, as: 'applicants', url: session_path('applicant'), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <div class="checkbox">
            <label><%= f.check_box :remember_me %> Remember me</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "Applicant/Trainee Login", class: 'btn btn-primary' %>
          <%= link_to "Sign up", new_registration_path('applicant'), class: 'btn btn-xs btn-default' %>
          <%= link_to "Forgot your password?", new_password_path('applicant'), class: 'btn btn-xs btn-default' %>
        </div>
      </div>

    <% end %>
  </div>

  <div class="col-md-6">
    <div class="page-header">
      <h1>Preceptor Login</h1>
    </div>
    <%= form_for(:preceptor, as: 'preceptor', url: session_path('preceptor'), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <div class="checkbox">
            <label><%= f.check_box :remember_me %> Remember me</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "Preceptor Login", class: 'btn btn-primary' %>
          <%= link_to "Forgot your password?", new_password_path('preceptor'), class: 'btn btn-xs btn-default' %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<hr class="soften">

<div class="row">
    <div class="col-md-6">
    <div class="page-header">
      <h1>Admin Login</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <div class="checkbox">
            <label><%= f.check_box :remember_me %> Remember me</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "Administrator Login", class: 'btn btn-primary' %>
          <% PROVIDERS.each do |provider| %>
            <% provider_name = OmniAuth.config.camelizations[provider.to_s.downcase] || provider.to_s.titleize %>
            <% image_name = provider.to_s.downcase %>
            <a href="<%= request.script_name %><%= "/" + OmniAuth.config.path_prefix.split('/').last.to_s %><%= "/" + provider.to_s.downcase %>" class="btn btn-default" style="white-space:nowrap;padding:0px 2px" rel='tooltip' data-title='<%= provider_name %>' data-placement='bottom' data-container="body">
              <%= image_tag "contour/#{image_name}_32.png", align: 'absmiddle', height: "28px" %>
            </a>
          <% end %>
          <div style="margin-top:5px">
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-xs btn-default' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-xs btn-default' %>
          </div>
        </div>
      </div>

    <% end %>
  </div>

  <div class="col-md-6">
    <%= render partial: 'contour/layouts/latest_news' %>
  </div>
</div>
