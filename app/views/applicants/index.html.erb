<% @title = 'Applicants' %>
<h1><%= @title %></h1>

<%= link_to image_tag('gentleface/16/doc_new.png', alt: '') + "Create New Applicant", new_applicant_path, class: 'button positive' %>

<%= form_tag applicants_path, method: :get, remote: true, id: "applicants_search", style: "margin-bottom:-5px" do %>
  <%= hidden_field_tag :order %>
  Search <%= text_field_tag 'search', params[:search] %>
<% end %>

<div id="applicants"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#applicants_search").attr("action"), $("#applicants_search").serialize(), null, "script");
  });
<% end %>
