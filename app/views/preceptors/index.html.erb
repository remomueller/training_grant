<% @title = 'Preceptors' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Preceptor", new_preceptor_path, class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag preceptors_path, method: :get, remote: true, id: "preceptors_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <%= link_to 'Export', '#', class: 'btn', data: { object: 'export', format: 'csv', target: '#preceptors_search' } %>
<% end %>

<div id="preceptors"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
