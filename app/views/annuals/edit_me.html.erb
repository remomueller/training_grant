<% @title = "My #{@annual.year} Annual Information" %>

<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(@annual, url: update_me_annual_path(@annual), html: { class: 'form-horizontal' }) do |f| %>
  <% if @annual.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@annual.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @annual.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :coursework_completed, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :coursework_completed, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :publications, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :publications, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :presentations, "Conferences, Presentations, Honors, and Fellowships", class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :presentations, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :research_description, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :research_description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :source_of_support, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :source_of_support %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :nih_other_support, 'NIH Other Support', class: 'control-label' %>
    <div class="controls">
      <%= f.file_field :nih_other_support %>
      <%= f.hidden_field :nih_other_support_cache %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.hidden_field :publish, value: '1' %>
    <%= f.submit 'Submit Annual Information', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', dashboard_applicants_path, class: 'btn' %>
  </div>
<% end %>
