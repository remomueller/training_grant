      <%= f.text_field :research_in_progress_date, class: 'datepicker form-control', value: applicant.research_in_progress_date ? applicant.research_in_progress_date.strftime('%m/%d/%Y') : '' %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>
</div>

