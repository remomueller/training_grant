<div class="page-header"><h2>Additional Program Requirements</h2></div>

<div class="form-group">
  <%= f.label :research_in_progress_title, 'Research-In-Progress Title', class: 'col-md-2 control-label' %>
  <div class="col-md-10">
    <%= f.text_field :research_in_progress_title, class: 'form-control' %>
  </div>
</div>

